# Supabase Configuration
# Copy this file to .env.local and fill in your actual values

# Required: Supabase Project URL
# Get this from: Supabase Dashboard → Settings → API → Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Required: Supabase Anonymous/Public Key
# Get this from: Supabase Dashboard → Settings → API → anon/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Required: Supabase Service Role Key (SECRET - server-side only)
# Get this from: Supabase Dashboard → Settings → API → service_role key
# ⚠️ NEVER expose this key in client-side code or commit it to git
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: Site URL for OG images and canonical URLs
# For local development, use: http://localhost:3000
# For production, use your Vercel deployment URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Cron secret for securing cron endpoint
# Generate with: openssl rand -hex 32
CRON_SECRET=your-secure-random-string-here
